    <TextView
        android:id="@+id/sut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text=" SUT Royal Hospital"/>

    <TextView
        android:id="@+id/meditrina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text=" Meditrina Hospital"/>
    <TextView
        android:id="@+id/kerala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text=" Kerala Institute of Medical Sciences"/>

    <TextView
        android:id="@+id/gg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text=" GG Hospital"/>
    <TextView
        android:id="@+id/medical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text=" Medical College"/>
