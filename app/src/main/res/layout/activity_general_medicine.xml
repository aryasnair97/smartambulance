        android:textStyle="bold"
        android:text="Credence Hospital"
        />
    <TextView
        android:id="@+id/sasikala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"
