<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activuity.BookingPage"
    android:gravity="center">

<TextView
    android:id="@+id/tv"
    android:layout_gravity="center"
    android:textSize="20dp"
    android:layout_marginTop="30dp"
    android:text="Hospital"
    android:textColor="#040E44"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <EditText
        android:id="@+id/Birthday"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:editable="false"
        android:hint="Date of Appointment"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="200dp"
        android:layout_marginTop="25dp"
        android:text="Book your OP"
        android:background="#040E44"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:hint="You will get a confirmation mail within five minutes"/>
</LinearLayout>